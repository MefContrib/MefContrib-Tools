<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="Brush_Blue" Color="#29BFF0"/>
    <SolidColorBrush x:Key="Brush_Green" Color="#FFBBE100"/>
    <SolidColorBrush x:Key="Brush_Yellow" Color="#FFFFF900"/>
    <SolidColorBrush x:Key="Brush_Red" Color="Red"/>
	
	<LinearGradientBrush x:Key="Brush_BlueIcon" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FF0068B6" Offset="1"/>
        <GradientStop Color="#FF46A5F2"/>
        <GradientStop Color="#FF52AFF5" Offset="0.087"/>
    </LinearGradientBrush>
	<LinearGradientBrush x:Key="Brush_GreenIcon" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FF98B600" Offset="1"/>
        <GradientStop Color="#FFBBE100"/>
        <GradientStop Color="#FFC9F100" Offset="0.087"/>
    </LinearGradientBrush>
</ResourceDictionary>